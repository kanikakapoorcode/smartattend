{
  "name": "smartattend",
  "version": "1.0.0",
  "description": "AI-Powered Attendance Guardian - Never miss 75% attendance",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server",
    "lint": "npm run lint --workspaces",
    "lint:client": "npm run lint --workspace=client",
    "lint:server": "npm run lint --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "attendance",
    "ai",
    "education",
    "react",
    "nodejs",
    "typescript"
  ],
  "author": "kanikakapoorcode",
  "license": "GEHU",
  "repository": {
    "type": "git",
    "url": "https://github.com/kanikakapoorcode/smartattend.git"
  }
} 